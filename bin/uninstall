#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"

export DOTFILES_REPO_ROOT="${REPO_ROOT}"

source "${REPO_ROOT}/scripts/common.sh"

log_info "Starting dotfiles uninstall"

"${REPO_ROOT}/scripts/unlink_dotfiles.sh"

log_success "Dotfiles uninstall finished"


